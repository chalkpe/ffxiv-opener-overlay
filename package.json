{
  "name": "ffxiv-opener-overlay",
  "version": "1.0.1",
  "private": true,
  "description": "ACT overlay for Final Fantasy XIV that shows your real-time skill sequences",
  "repository": "https://github.com/ChalkPE/ffxiv-opener-overlay",
  "author": "ChalkPE",
  "license": "MIT",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "deploy": "push-dir --dir=dist --branch=gh-pages --cleanup"
  },
  "dependencies": {
    "vue": "^3.2.31"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.17.0",
    "@vue/cli-plugin-babel": "^5.0.0-rc.3",
    "@vue/cli-plugin-eslint": "^5.0.0-rc.3",
    "@vue/cli-service": "^5.0.0-rc.3",
    "eslint": "^8.9.0",
    "eslint-plugin-vue": "^8.4.1",
    "eslint-scope": "^7.1.1",
    "push-dir": "^0.4.1",
    "vue-template-compiler": "^2.6.14"
  },
  "babel": {
    "presets": ["@vue/app"]
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true
    },
    "extends": [
      "plugin:vue/vue3-recommended",
      "eslint:recommended"
    ],
    "rules": {
      "no-console": "off",
      "vue/max-attributes-per-line": ["error", {
        "singleline": {
          "max": 2
        },
        "multiline": {
          "max": 1
        }
      }]
    },
    "parserOptions": {
      "parser": "@babel/eslint-parser"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "chrome 45"
  ],
  "vue": {
    "publicPath": "./",
    "productionSourceMap": false
  }
}
